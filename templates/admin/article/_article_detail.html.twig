<dl class="row">
    <dt class="col-2">ID</dt>
    <dd class="col-10">{{ article.id }}</dd>
    <dt class="col-2">Slug</dt>
    <dd class="col-10">{{ article.slug }}</dd>
    <dt class="col-2">Author</dt>
    <dd class="col-10">{{ article_author(article.author) }}</dd>
    <dt class="col-2">Title</dt>
    <dd class="col-10">{{ article.title }}</dd>
    <dt class="col-2">Subtitle</dt>
    <dd class="col-10">{{ article.subtitle }}</dd>
    <dt class="col-2">Body</dt>
    <dd class="col-10">{% include 'news/_article_content.html.twig' with {article: article} %}</dd>
    <dt class="col-2">Tags</dt>
    <dd class="col-10">{{ include('common/_tags.html.twig', {tags: article.tags}) }}</dd>
    <dt class="col-2">Published</dt>
    <dd class="col-10">{{ article.published ? article.publishedAt|relative_time : 'not yet published' }}</dd>
    {% if not article.legacyFormat %}
        <dt class="col-2">Last Updated</dt>
        <dd class="col-10">{{ article.updatedAt|relative_time }}</dd>
        <dt class="col-2">Created</dt>
        <dd class="col-10">{{ article.createdAt|relative_time }}</dd>
    {% endif %}
</dl>
