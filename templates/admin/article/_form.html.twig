{{ form_start(form) }}

<div class="form-group">
    <label for="author">Author</label>
    <input type="text" readonly class="form-control-plaintext" id="author" value="{{ author }}">
</div>

{{ form_rest(form) }}

<div class="btn-group" role="group">
    <button type="submit"
            class="btn btn-{{ submitBtnType|default('primary') }}">{{ submitBtnText|default('Update') }}</button>
    <a href="{{ path('app_admin_article_list', {all: true}) }}" class="btn btn-light">Cancel</a>
</div>

{{ form_end(form) }}
