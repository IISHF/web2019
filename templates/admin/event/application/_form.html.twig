{{ form_start(form) }}

{{ form_rest(form) }}

{% if application is defined %}
    {% set cancelPath = path('app_admin_event_titleeventapplication_detail', {
        event: application.titleEvent.id,
        application: application.id
    }) %}
{% else %}
    {% set cancelPath = path('app_admin_event_event_detail', {season: event.season, event: event.slug}) %}
{% endif %}

<div class="btn-group" role="group">
    <button type="submit" class="btn btn-{{ submitBtnType|default('primary') }}">
        {{ submitBtnText|default('Update') }}</button>
    <a href="{{ cancelPath }}" class="btn btn-light">Cancel</a>
</div>

{{ form_end(form) }}
