{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>
        {% if workflow_has_marked_place(article, 'draft') %}
            <span class="badge badge-light">{{ workflow_metadata(article, 'title', 'draft') }}</span>
        {% elseif workflow_has_marked_place(article, 'review') %}
            <span class="badge badge-dark">{{ workflow_metadata(article, 'title', 'review') }}</span>
        {% endif %}
        {{ article.title }}
    </h1>

    <dl class="row">
        <dt class="col-2">ID</dt>
        <dd class="col-10">{{ article.id }}</dd>
        <dt class="col-2">Slug</dt>
        <dd class="col-10">{{ article.slug }}</dd>
        <dt class="col-2">Published</dt>
        <dd class="col-10">{{ article.publishedAt|date }}</dd>
        <dt class="col-2">Tags</dt>
        <dd class="col-10">
            {% for tag in article.tags %}
                <span class="badge badge-secondary">{{ tag }}</span>
            {% endfor %}
        </dd>
        <dt class="col-2">Title</dt>
        <dd class="col-10">{{ article.title }}</dd>
        <dt class="col-2">Subtitle</dt>
        <dd class="col-10">{{ article.subtitle }}</dd>
        <dt class="col-2">Body</dt>
        <dd class="col-10">{{ article|article_body_format }}</dd>
    </dl>

    {% set transitions = workflow_transitions(article) %}
    {% set modalIds = {} %}
    {% for transition in transitions %}
        {% set modalIds = modalIds|merge({(transition.name): 'confirm_' ~ random()}) %}
        <div class="modal" role="dialog" id="{{ modalIds[transition.name] }}">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ article.title }}</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>{{ workflow_metadata(article, 'title', transition) }}</p>
                    </div>
                    <div class="modal-footer">
                        <form action="{{ path('app_article_workflow', {'article': article.id}) }}"
                              method="post">
                            <input type="hidden" name="transition" value="{{ transition.name }}"/>
                            <input type="hidden" name="_token"
                                   value="{{ csrf_token('article_'~transition.name~'_'~article.id) }}"/>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel
                            </button>
                            <button type="submit" class="btn btn-outline-primary">
                                {{ workflow_metadata(article, 'title', transition) }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="btn-group" role="group">
        {% if is_granted('ARTICLE_EDIT', article) %}
            <a href="{{ path('app_article_update', {'article': article.id}) }}" class="btn btn-primary">Edit</a>
        {% endif %}
        {% for transition in transitions %}
            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                    data-target="#{{ modalIds[transition.name] }}">
                {{ workflow_metadata(article, 'title', transition) }}
            </button>
        {% endfor %}
        <a href="{{ path('app_article_getlist') }}" class="btn btn-outline-secondary">Back</a>
    </div>
{% endblock %}
