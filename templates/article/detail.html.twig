{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>
        {% if workflow_has_marked_place(article, 'draft') %}
            <span class="badge badge-light">{{ workflow_metadata(article, 'title', 'draft') }}</span>
        {% elseif workflow_has_marked_place(article, 'review') %}
            <span class="badge badge-dark">{{ workflow_metadata(article, 'title', 'review') }}</span>
        {% endif %}
        {{ article.title }}
    </h1>

    <dl class="row">
        <dt class="col-2">ID</dt>
        <dd class="col-10">{{ article.id }}</dd>
        <dt class="col-2">Slug</dt>
        <dd class="col-10">{{ article.slug }}</dd>
        <dt class="col-2">Author</dt>
        <dd class="col-10">{{ article_author(article.author) }}</dd>
        <dt class="col-2">Published</dt>
        <dd class="col-10">
            <relative-time datetime="{{ article.publishedAt|date }}" data-toggle="tooltip" data-placement="top">
                {{ article.publishedAt|date('F j, Y H:i') }}
            </relative-time>
        </dd>
        <dt class="col-2">Tags</dt>
        <dd class="col-10">
            {% for tag in article.tags %}
                <span class="badge badge-secondary">{{ tag }}</span>
            {% endfor %}
        </dd>
        <dt class="col-2">Title</dt>
        <dd class="col-10">{{ article.title }}</dd>
        <dt class="col-2">Subtitle</dt>
        <dd class="col-10">{{ article.subtitle }}</dd>
        <dt class="col-2">Body</dt>
        <dd class="col-10">
            {% if article.legacyFormat %}
                <div class="clearfix">
                    {% if images.hasPrimaryImage %}
                        {# @var primaryImage \App\Domain\Model\Article\ArticleImage #}
                        {% set primaryImage = images.primaryImage %}
                        <figure class="figure float-left mr-4">
                            <a href="{{ path('app_file_download', {'name': primaryImage.name}) }}" target="_blank">
                                <img src="{{ path('app_file_download', {'name': primaryImage.name, 'w': 300}) }}"
                                     class="figure-img img-fluid rounded"
                                     alt="{{ primaryImage.caption|default(primaryImage.clientName)|e('html_attr') }}">
                            </a>
                            {% if primaryImage.caption is not empty %}
                                <figcaption class="figure-caption">{{ primaryImage.caption }}</figcaption>
                            {% endif %}
                        </figure>
                    {% endif %}
                    {{ article.body|article_legacy_body }}
                </div>
                {% if documents is not empty %}
                    <div class="card my-4">
                        <div class="card-header">Documents</div>
                        <div class="list-group list-group-flush">
                            {% for document in documents %}
                                {# @var document \App\Domain\Model\Article\ArticleDocument #}
                                <a href="{{ path('app_file_download', {'name': document.name}) }}"
                                   target="_blank"
                                   class="list-group-item list-group-item-action">{{ document.title }}</a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                {% if images.hasSecondaryImages %}
                    <div class="card my-4">
                        <div class="card-header">Images</div>
                        <div class="card-body">
                            <div class="container">
                                {% for row in images.secondaryImages|batch(5) %}
                                    <div class="row">
                                        {% for image in row %}
                                            {# @var image \App\Domain\Model\Article\ArticleImage #}
                                            <div class="col">
                                                <figure class="figure float-left">
                                                    <a href="{{ path('app_file_download', {'name': image.name}) }}"
                                                       target="_blank">
                                                        <img src="{{ path('app_file_download', {'name': image.name}) }}"
                                                             class="figure-img img-fluid rounded"
                                                             alt="{{ image.caption|default(image.clientName)|e('html_attr') }}">
                                                    </a>
                                                    {% if image.caption is not empty %}
                                                        <figcaption
                                                            class="figure-caption small">{{ image.caption }}</figcaption>
                                                    {% endif %}
                                                </figure>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="trix-content">{{ article.body|purify('article') }}</div>
            {% endif %}
        </dd>
    </dl>

    {% set transitions = workflow_transitions(article) %}
    {% set modalIds = {} %}
    {% for transition in transitions %}
        {% set modalIds = modalIds|merge({(transition.name): 'confirm_' ~ random()}) %}
        <div class="modal" role="dialog" id="{{ modalIds[transition.name] }}">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ article.title }}</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>{{ workflow_metadata(article, 'title', transition) }}</p>
                    </div>
                    <div class="modal-footer">
                        <form action="{{ path('app_article_workflow', {'article': article.id}) }}"
                              method="post">
                            <input type="hidden" name="transition" value="{{ transition.name }}"/>
                            <input type="hidden" name="_token"
                                   value="{{ csrf_token('article_'~transition.name~'_'~article.id) }}"/>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel
                            </button>
                            <button type="submit" class="btn btn-outline-primary">
                                {{ workflow_metadata(article, 'title', transition) }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="btn-group" role="group">
        {% if is_granted('ARTICLE_EDIT', article) %}
            <a href="{{ path('app_article_update', {'article': article.id}) }}" class="btn btn-primary">Edit</a>
        {% endif %}
        {% for transition in transitions %}
            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                    data-target="#{{ modalIds[transition.name] }}">
                {{ workflow_metadata(article, 'title', transition) }}
            </button>
        {% endfor %}
        <a href="{{ path('app_article_getlist') }}" class="btn btn-outline-secondary">Back</a>
    </div>
{% endblock %}
