{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>Articles</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="btn-group" role="group">
            <a href="{{ path('app_article_create') }}" class="btn btn-primary">Create</a>
        </div>
    {% endif %}

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Published</th>
            <th scope="col">&#160;</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th scope="row">{{ articles.nbResults -  loop.index0 - articles.currentPageOffsetStart + 1 }}</th>
                <td>
                    {% if workflow_has_marked_place(article, 'draft') %}
                        <span class="badge badge-light">{{ workflow_metadata(article, 'title', 'draft') }}</span>
                    {% elseif workflow_has_marked_place(article, 'review') %}
                        <span class="badge badge-dark">{{ workflow_metadata(article, 'title', 'review') }}</span>
                    {% endif %}
                    <a href="{{ path('app_article_getdetail', {'article': article.slug}) }}">{{ article.title }}</a>
                    {% for tag in article.tags %}
                        <span class="badge badge-secondary">{{ tag }}</span>
                    {% endfor %}
                    {% if article.subtitle %}
                        <p class="small text-muted">{{ article.subtitle }}</p>
                    {% endif %}
                </td>
                <td class="text-nowrap">{{ article.publishedAt|relative_time }}</td>
                <td>
                    {% embed 'article/_article_workflow_buttons.html.twig' with {article: article, size: 'sm'} %}
                        {% block before_workflow %}
                            {% if is_granted('ARTICLE_EDIT', article) %}
                                <a href="{{ path('app_article_update', {'article': article.id}) }}"
                                   class="btn btn-primary">Edit</a>
                            {% endif %}
                        {% endblock %}
                        {% block after_workflow %}
                            {% if is_granted('ARTICLE_DELETE', article) %}
                                {{ include('common/_delete_btn.html.twig', {
                                    title: 'Delete article',
                                    body: 'Do you really want to delete the article?',
                                    deleteAction: path('app_article_delete', {'article': article.id}),
                                    csrfIntention: 'article_delete_' ~ article.id,
                                }) }}
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No articles found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if articles.haveToPaginate %}
        <nav>
            {{ pagerfanta(articles) }}
        </nav>
    {% endif %}
{% endblock %}
