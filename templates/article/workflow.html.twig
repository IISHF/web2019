{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>
        {{ workflow_metadata(article, 'button', transition) }}
        {{ article.title }}
    </h1>

    {{ include('article/_article_detail.html.twig', {article: article}) }}

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-{{ workflow_metadata(article, 'color', transition) }}">
            {{ workflow_metadata(article, 'confirm_btn', transition) }}
        </button>
        <a href="{{ path('app_article_list') }}" class="btn btn-outline-secondary">Back</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
