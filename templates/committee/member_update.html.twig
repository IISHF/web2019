{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>{{ member.name }}</h1>

    {{ form_start(form) }}

    {{ form_rest(form) }}

    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="{{ path('app_committee_detail', {'committee': member.committee.slug}) }}"
           class="btn btn-light">Cancel</a>
    </div>

    {{ form_end(form) }}
{% endblock %}
