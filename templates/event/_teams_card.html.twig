<div class="card my-4">
    <div class="card-body">
        <h5 class="card-title">Teams</h5>
        {% if is_granted('EVENT_EDIT', event) %}
            <div class="btn-group" role="group">
                <a href="{{ path('app_event_participatingteam_add', {event: event.id}) }}"
                   class="btn btn-success">Add team</a>
            </div>
        {% endif %}
        <table class="table table-sm">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Team</th>
                <th scope="col">Updated</th>
                <th scope="col">&#160;</th>
            </tr>
            </thead>
            <tbody>
            {# @var teams \App\Domain\Model\Event\ParticipatingTeam[] #}
            {% for team in teams %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>
                        <a href="{{ path('app_event_participatingteam_detail', {
                            event: event.id,
                            teamId: team.id
                        }) }}">{{ team.name }}</a>
                    </td>
                    <td class="text-nowrap">{{ team.updatedAt|relative_time }}</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            {% if is_granted('EVENT_EDIT', event) %}
                                <a href="{{ path('app_event_participatingteam_update', {
                                    event: event.id,
                                    teamId: team.id
                                }) }}"
                                   class="btn btn-primary">Edit</a>
                                {{ include('common/_delete_btn.html.twig', {
                                    title: team.name,
                                    body: 'Do you really want to remove the team?',
                                    deleteBtn: 'Remove',
                                    deleteAction: path('app_event_participatingteam_remove', {
                                        event: event.id,
                                        teamId: team.id
                                    }),
                                    csrfIntention: 'event_team_remove_' ~ team.id,
                                }) }}
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No teams found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>