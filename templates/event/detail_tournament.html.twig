{% extends 'public_base.html.twig' %}

{% block content %}
    {# @var event \App\Domain\Model\Event\Tournament #}
    <h1>Tournament {{ event.season }} / {{ event.name }}</h1>

    {{ include('event/_tournament_detail.html.twig', {event: event}) }}

    {{ include('event/_teams_card.html.twig', {event: event, teams: teams}) }}

    {% embed 'event/_event_workflow_buttons.html.twig' with {event: event} %}
        {% block before_workflow %}
            {% if is_granted('EVENT_EDIT', event) %}
                <a href="{{ path('app_event_event_update', {event: event.id}) }}"
                   class="btn btn-primary">Edit</a>
            {% endif %}
        {% endblock %}
        {% block after_workflow %}
            {% if is_granted('EVENT_DELETE', event) %}
                {{ include('common/_delete_btn.html.twig', {
                    title: event.name,
                    body: 'Do you really want to delete the tournament?',
                    deleteAction: path('app_event_event_delete', {event: event.id}),
                    csrfIntention: 'event_delete_' ~ event.id,
                }) }}
            {% endif %}
            <a href="{{ path('app_event_event_season', {season: event.season}) }}"
               class="btn btn-outline-secondary">Back</a>
        {% endblock %}
    {% endembed %}
{% endblock %}
