<section class="m-calendar">
    <div class="m-calendar__bg m-calendar__bg--left">
        <div class="m-calendar__bg m-calendar__bg--right">
            {% include 'home/_title.html.twig' with {'title': 'Calendar', 'before': true} %}
            <div class="container-fluid">
                <div class="m-calendar__content">
                    <div id="externalTitle" class="text-center"></div>

                    <ul class="nav nav-pills mb-5 d-flex justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="pills-today-tab" data-toggle="pill" data-calendar="tab"
                               href="#pills-today" role="tab"
                               aria-controls="pills-home" aria-selected="true"><span>Today</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-tournament-tab" data-toggle="pill"
                               data-calendar="tab" href="#pills-tournament" role="tab"
                               aria-controls="pills-profile" aria-selected="false"><span>Tournament</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mr-0" id="pills-other-tab" data-toggle="pill" data-calendar="tab"
                               href="#pills-other" role="tab"
                               aria-controls="pills-contact" aria-selected="false"><span>Other event</span></a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade" id="pills-today" role="tabpanel"
                             aria-labelledby="pills-today-tab">
                            <div class="lds-dual-ring"></div>
                            <div id="calendarToday" class="calendar-container"></div>
                        </div>
                        <div class="tab-pane fade show active" id="pills-tournament" role="tabpanel"
                             aria-labelledby="pills-tournament-tab">
                            <div class="lds-dual-ring" style="display: none"></div>
                            <div id="calendarTournament" class="calendar-container"></div>
                        </div>
                        <div class="tab-pane fade" id="pills-other" role="tabpanel"
                             aria-labelledby="pills-other-tab">
                            <div class="lds-dual-ring"></div>
                            <div id="calendarOther" class="calendar-container"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
