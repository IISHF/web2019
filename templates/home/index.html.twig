{% extends 'public_base.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>{{ number }}</h1>

    <div class="btn-group" role="group">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_home_index') }}" class="btn btn-warning">Admin</a>
        {% endif %}
        {% if app.user %}
            <a href="{{ path('app_account_changepassword') }}" class="btn btn-info">Change Password</a>
            <a href="{{ logout_path() }}" class="btn btn-primary">Logout {{ app.user.username }}</a>
        {% else %}
            <a href="{{ path('login') }}" class="btn btn-primary">Login</a>
        {% endif %}
    </div>
{% endblock %}
