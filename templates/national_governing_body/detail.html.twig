{% extends 'public_base.html.twig' %}

{% block content %}
    <h1>{{ ngb.name }}</h1>

    <div style="height: 300px;" data-enable-dropzone="true" class="dropzone"
         data-dropzone-url="{{ path('app_file_upload') }}"
         data-dropzone-template="#dropzoneTemplate"
         data-dropzone-options="{{ {
             'maxFiles': 1,
             'acceptedFiles': 'image/*',
             'autoProcessQueue': false,
             'addRemoveLinks': false,
             'createImageThumbnails': true,
             'thumbnailWidth': null,
             'thumbnailHeight': null,
             'maxFilesize': 16000000
         }|json_encode }}">
        <div class="fallback">
            <input name="file" type="file" accept="image/*"/>
        </div>
    </div>

    <div id="dropzoneTemplate" class="dropzone-template">
        <div class="dropzone-preview">
            <div data-dz-size></div>
            <button type="button" class="btn btn-danger" data-dz-remove>Remove</button>
            <img data-dz-thumbnail/>
        </div>
    </div>

    <dl class="row">
        <dt class="col-2">ID</dt>
        <dd class="col-10">{{ ngb.id }}</dd>
        <dt class="col-2">Slug</dt>
        <dd class="col-10">{{ ngb.slug }}</dd>
        <dt class="col-2">Name</dt>
        <dd class="col-10">{{ ngb.name }}</dd>
        <dt class="col-2">Acronym</dt>
        <dd class="col-10">{{ ngb.acronym }}</dd>
        <dt class="col-2">IOC Code</dt>
        <dd class="col-10">{{ ngb.iocCode }}</dd>
        <dt class="col-2">Country Code</dt>
        <dd class="col-10">{{ ngb.country }}</dd>
        <dt class="col-2">Country</dt>
        <dd class="col-10">{{ ngb.countryName }}</dd>
        <dt class="col-2">Email</dt>
        <dd class="col-10">{{ ngb.email }}</dd>
        <dt class="col-2">Website</dt>
        <dd class="col-10">{{ ngb.website }}</dd>
        <dt class="col-2">Telephone</dt>
        <dd class="col-10">{{ ngb.phoneNumber ? ngb.phoneNumber|phone_number_format() : '' }}</dd>
        <dt class="col-2">Facebook Profile</dt>
        <dd class="col-10">{{ ngb.facebookProfile }}</dd>
        <dt class="col-2">Twitter Profile</dt>
        <dd class="col-10">{{ ngb.twitterProfile }}</dd>
        <dt class="col-2">Instagram Profile</dt>
        <dd class="col-10">{{ ngb.instagramProfile }}</dd>
    </dl>

    <div class="btn-group" role="group">
        {% if is_granted('NATIONAL_GOVERNING_BODY_EDIT', ngb) %}
            <a href="{{ path('app_nationalgoverningbody_update', {'ngb': ngb.id}) }}"
               class="btn btn-primary">Edit</a>
        {% endif %}
        <a href="{{ path('app_nationalgoverningbody_getlist') }}" class="btn btn-outline-secondary">Back</a>
    </div>

{% endblock %}
