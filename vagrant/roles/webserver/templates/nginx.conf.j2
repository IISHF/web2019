server {
    listen 443 ssl http2 default_server;

    http2_push_preload on;

    server_name {{ ansible_fqdn }} {{ ansible_hostname }} {{ inventory_hostname }};
    root /var/www/iishf/public;

    ssl_certificate /etc/ssl/certs/iishf-test.crt;
    ssl_certificate_key /etc/ssl/private/iishf-test.key;

    error_log /var/log/nginx/iishf.error.log;
    access_log /var/log/nginx/iishf.access.log;

    client_max_body_size 100m;

    gzip on;
    gzip_http_version 1.0;
    gzip_disable "MSIE [1-6]\.";
    gzip_vary on;
    gzip_comp_level 2;
    gzip_min_length 1100;
    gzip_buffers 4 8k;
    gzip_proxied any;
    gzip_types
        text/plain
        text/xml
        text/css
        text/javascript
        application/json
        application/x-javascript
        application/javascript
        application/ecmascript
        application/rss+xml
        application/xml;

    location / {
        # try to serve file directly, fallback to index.php
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        fastcgi_pass unix:/run/php/php7.2-fpm.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;

        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;

        fastcgi_param IS_VIRTUAL_ENV 1;

        internal;
    }

    location ~ \.php$ {
        return 404;
    }
}
